@using FinalMediaGuide.BLL.ViewModels;
@using FinalMediaGuide.DAL.Entities;
@model List<NewsVM>
@{
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}
<a asp-action="AddEdit" asp-controller="News" class="modal-open btn btn-success">Add</a>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Image</th>
            <th>News Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody class="table-border-bottom-0">
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@item.Id</strong></td>
                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Title</strong></td>
                <td>@item.Description.Remove(150)...</td>
                <td>
                    <img src="@item.ImageFile" class="rounded-3 img-fluid border-1" style="max-width:100px;">
                </td>
                <td><span class="badge bg-label-primary me-1">@item.NewsType</span></td>
                <td>
                    <div class="dropdown">
                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bx bx-dots-vertical-rounded"></i>
                        </button>
                        <div class="dropdown-menu" style="">
                            <a asp-action="AddEdit" asp-route-newsId="@item.Id" asp-route-culture="@CultureType.en" asp-controller="News" class="modal-open dropdown-item"><i class="bx bx-edit-alt me-1"></i>Edit</a>
                            <a asp-action="AddEdit" asp-route-newsId="@item.Id" asp-route-culture="@CultureType.am" asp-controller="News" class="modal-open dropdown-item"><i class="bx bx-edit-alt me-1"></i>Edit am</a>
                            <a asp-action="AddEdit" asp-route-newsId="@item.Id" asp-route-culture="@CultureType.ru" asp-controller="News" class="modal-open dropdown-item"><i class="bx bx-edit-alt me-1"></i>Edit ru</a>
                            <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>