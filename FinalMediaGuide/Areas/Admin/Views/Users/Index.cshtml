@using FinalMediaGuide.DAL.Entities;
@model IEnumerable<User>
@{
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<a asp-action="Create" class="btn btn-success modal-open">Add User</a>

<table class="table">
    <tr>
        <th>Email</th>
        <th>Year</th>
        <th></th>
    </tr>
    @foreach(var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Year</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary modal-open" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>